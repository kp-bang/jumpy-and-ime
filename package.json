{
  "name": "jumpy-and-ime",
  "displayName": "jumpy-and-ime",
  "description": "把jumpy的功能和控制系统ime中英文变化的能力聚合到一个插件上",
  "version": "0.0.1",
  "publisher": "bang",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "jumpy-and-ime.jumpy-word",
        "key": "shift+enter",
        "when": "editorTextFocus"
      },
      {
        "command": "jumpy-and-ime.jumpy-escape",
        "key": "Escape",
        "when": "editorTextFocus && jumpy-and-ime.isJumpyMode"
      },
      {
        "command": "jumpy-and-ime.jumpy-up-lines",
        "key": "ctrl+alt+k",
        "when": "editorTextFocus"
      },
      {
        "command": "jumpy-and-ime.jumpy-down-lines",
        "key": "ctrl+alt+j",
        "when": "editorTextFocus"
      }
    ],
    "commands": [
      {
        "command": "jumpy-and-ime.jumpy-word",
        "title": "Jumpy Word Mode"
      },
      {
        "command": "jumpy-and-ime.jumpy-escape",
        "title": "jumpy escape"
      },
      {
        "command": "jumpy-and-ime.jumpy-exit",
        "title": "Exit Jumpy Mode"
      },
      {
        "command": "jumpy-and-ime.jumpy-up-lines",
        "title": "viewport向上移动n行"
      },
      {
        "command": "jumpy-and-ime.jumpy-down-lines",
        "title": "viewport向下移动n行"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "jumpy-and-ime",
      "properties": {
        "jumpy-and-ime.jumpyEnable": {
          "order": 0,
          "type": "boolean",
          "default": true,
          "description": "jumpy功能启停"
        },
        "jumpy-and-ime.smartImeEnable": {
          "order": 1,
          "type": "boolean",
          "default": true,
          "description": "smartIme功能启停"
        },
        "jumpy-and-ime.wordRegexp": {
          "order": 2,
          "type": "string",
          "default": "(?<=\\b)\\w{2,}|(?<=(?<=\\b)\\w{2,})[\\W\\r\\n]|[\\u4e00-\\u9fa5]{2,}|(?<=[\\u4e00-\\u9fa5]{2,})[^\\u4e00-\\u9fa5]{1,}|(?<=\\()\\)|(?<=\\{\\s*)\\}|(?<=\\[)\\]|(?<=\\`)\\`|(?<=\\')\\'|(?<=\\\")\\\"|(?<=\\<)\\>|\\r?\\n",
          "description": "针对每行文本断词正则"
        },
        "jumpy-and-ime.maxCodeCount": {
          "order": 3,
          "type": "number",
          "default": 676,
          "description": "最多26*26=676个待选快捷代码，满额断词数量可能有性能问题，可自定义设置最大数量"
        },
        "jumpy-and-ime.darkThemeBackground": {
          "order": 4,
          "type": "string",
          "default": "white",
          "description": "暗黑模式下显示的快捷代码块背景颜色"
        },
        "jumpy-and-ime.darkThemeForeground": {
          "order": 5,
          "type": "string",
          "default": "black",
          "description": "暗黑模式下显示的快捷代码块字体颜色"
        },
        "jumpy-and-ime.lightThemeBackground": {
          "order": 6,
          "type": "string",
          "default": "black",
          "description": "明亮模式下显示的快捷代码块背景颜色"
        },
        "jumpy-and-ime.lightThemeForeground": {
          "order": 7,
          "type": "string",
          "default": "white",
          "description": "明亮模式下显示的快捷代码块字体颜色"
        },
        "jumpy-and-ime.movingStepLength": {
          "order": 8,
          "type": "number",
          "default": 5,
          "description": "设置viewport跳动步长"
        },
        "jumpy-and-ime.cursorStyle.enable": {
          "order": 9,
          "type": "boolean",
          "default": true,
          "description": "光标【样式】随中英文变化"
        },
        "jumpy-and-ime.cursorStyle.English": {
          "order": 10,
          "type": "string",
          "default": "Line",
          "enum": [
            "Line",
            "Block",
            "Underline",
            "LineThin",
            "BlockOutline",
            "UnderlineThin"
          ],
          "description": "英文输入状态下的光标样式"
        },
        "jumpy-and-ime.cursorStyle.Chinese": {
          "order": 11,
          "type": "string",
          "default": "Underline",
          "enum": [
            "Line",
            "Block",
            "Underline",
            "LineThin",
            "BlockOutline",
            "UnderlineThin"
          ],
          "description": "中文输入状态下的光标样式"
        },
        "jumpy-and-ime.cursorColor.enable": {
          "order": 12,
          "type": "boolean",
          "default": true,
          "description": "光标【颜色】随中英文变化"
        },
        "jumpy-and-ime.cursorColor.English": {
          "order": 13,
          "type": "string",
          "default": "",
          "description": "英文输入状态下的光标十六进制颜色(格式：#RGB、#RGBA、#RRGGBB 或 #RRGGBBAA)"
        },
        "jumpy-and-ime.cursorColor.Chinese": {
          "order": 14,
          "type": "string",
          "default": "#FF0000",
          "description": "中文输入状态下的光标十六进制颜色(格式：#RGB、#RGBA、#RRGGBB 或 #RRGGBBAA)"
        },
        "jumpy-and-ime.warnDisabled": {
          "order": 15,
          "type": "boolean",
          "default": true,
          "description": "是否提示smart-ime功能被禁用"
        },
        "jumpy-and-ime.disabledOnEnglishTextOverN": {
          "order": 16,
          "type": "number",
          "default": 100,
          "description": "如果当前文档拥有超过 n 个英文字符且没有中文字符，则禁用smart-ime功能（你也可以直接在文档中加入 DISABLE_SMART_IME 字符串来禁用插件）"
        },
        "jumpy-and-ime.enterScopesFurtherMatch": {
          "order": 17,
          "type": "string",
          "default": "comment,string",
          "description": "设置scopes，用逗号分割，前缀匹配。进入设置的scopes，会进一步进行以下的3项功能匹配"
        },
        "jumpy-and-ime.enableMatchCnCursorToCn": {
          "order": 18,
          "type": "boolean",
          "default": true,
          "description": "光标前检测到1个字符是中文，则切换为【中文模式】"
        },
        "jumpy-and-ime.enableMatchCnSpaceCursorToEn": {
          "order": 19,
          "type": "boolean",
          "default": true,
          "description": "光标前检测到中文+空格时，则切换为【英文模式】"
        },
        "jumpy-and-ime.enableMatchEnDoubleSpaceCursorToCn": {
          "order": 20,
          "type": "boolean",
          "default": true,
          "description": "检测到当前行前有中文，且光标前检测到非中文+双空格时，则切换为【中文模式】，并删掉一个空格"
        },
        "jumpy-and-ime.enterScopesToCnMatch": {
          "order": 21,
          "type": "string",
          "default": "comment",
          "description": "设置scopes，用逗号分割，前缀匹配。进入设置的scopes，则切换为【中文模式】"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.6.0",
    "@types/lodash": "^4.17.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "dayjs": "^1.11.18",
    "ffi-rs": "^1.3.0",
    "lodash": "^4.17.21",
    "mobx": "^6.12.0",
    "rxjs": "^7.8.2",
    "vscode-oniguruma": "^1.6.2",
    "vscode-textmate": "^6.0.0"
  },
  "extensionDependencies": [
    "bang.hscopes-booster"
  ]
}